	<appender name="file" class="org.apache.log4j.FileAppender">
		<param name="File" value="C:/datafiles/hifiveEditorServer/logs/hifiveVisualEditor.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d{yy/MM/dd HH:mm:ss.SSS} %-5p
		%X{indent}%m &lt;- %C{1}%n" />
		</layout>
	</appender>

	<category name="com.htmlhifive">
		<level value="info" />
		<appender-ref ref="file" />
	</category>

